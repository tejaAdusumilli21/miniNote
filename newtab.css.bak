:root{
  --bg:#ffffff;
  --muted:#f3f4f6;
  --muted2:#e5e7eb;
  --text:#111827;
  --sub:#6b7280;
  --border:#d1d5db;
  --shadow:0 2px 10px rgba(0,0,0,.06);
  --shadow2:0 10px 30px rgba(0,0,0,.18);
  --accent:#2563eb;
  --accent-rgb:37,99,235;
  --danger:#dc2626;

  /* UI sizing + typography */
  --ui-scale: 0.75; /* 0.75 = looks like browser zoom 75% */
  --app-font: "Calibri Light", Calibri, system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
}

:root[data-theme="dark"]{
  --bg:#0b0f19;
  --muted:#121a2a;
  --muted2:#1d2a42;
  --text:#e5e7eb;
  --sub:#9ca3af;
  --border:#2a3957;
  --shadow:0 2px 10px rgba(0,0,0,.35);
  --shadow2:0 10px 30px rgba(0,0,0,.55);
  --accent:#60a5fa;
  --accent-rgb:96,165,250;
}

*{ box-sizing:border-box; }

/* Ensure form controls inherit theme text color (fixes dark-mode tab text). */
button, input, select, textarea{
  font: inherit;
  color: inherit;
}

/* Replace browser default focus ring with a consistent accent ring. */
button:focus, input:focus, select:focus, textarea:focus{ outline:none; }
button:focus-visible, input:focus-visible, select:focus-visible, textarea:focus-visible{
  outline:2px solid var(--accent);
  outline-offset:2px;
}

html,body{
  height:100%;
  margin:0;
  font-family:var(--app-font);
  font-size:calc(16px * var(--ui-scale));
  font-weight:400;
  color:var(--text);
  background:var(--bg);
}

/* Remove bold UI styling (keeps bold inside the editor content). */
body *:not(#editor):not(#editor *){ font-weight:400 !important; }
